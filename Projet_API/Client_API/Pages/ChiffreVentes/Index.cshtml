@model Client_API.Pages.ChiffreVentes.IndexModel

@{
    ViewData["Title"] = "Index";
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Client_API</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Constructeurs/Index">Constructeurs</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ChiffreVentes/Index">Chiffres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Consoles/Index">Consoles de Jeu</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn" style="background-color: #2bc48a;color:#fff">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChiffresVentes[0].Annee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChiffresVentes[0].NombreVentes)
            </th>
            <th>
                Console de Jeux 
            </th>

            <th>
                Actions
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ChiffresVentes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Annee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreVentes)
            </td>
                <td>
                    @Html.DisplayFor(constructeurName => Model.ConsoledeJeux[Model.ChiffresVentes.IndexOf(item)].Model)
            <td>
                    <button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Page("./Edit", new { id = item.Id })'">Edit</button>
                    |
                    <button type="button" class="btn btn-outline-danger" onclick="location.href='@Url.Page("./Delete", new { id = item.Id })'">Delete</button>
               
            </td>
        </tr>
}
    </tbody>
</table>
